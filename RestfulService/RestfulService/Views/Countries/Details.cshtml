@model RestfulService.Domain.Entities.Country

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Country</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cities)
        </dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach(var city in Model.Cities)
                    {
                        <li>@city.Name, @city.Population</li>
                    }
                </ul>
            </dd>
        
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", "Countries", new { id = Model.Id }, null)|
    @Html.ActionLink("Back to countries list", "List")
</div>
